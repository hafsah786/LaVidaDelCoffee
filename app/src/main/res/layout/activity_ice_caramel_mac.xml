<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smithjterm.lavidadelcoffee.iceCaramelMacActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightBrown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="335dp"
            android:layout_height="213dp"
            android:layout_above="@+id/latteText"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/caramelmac"
            tools:layout_editor_absoluteY="2dp" />

        <TextView
            android:id="@+id/latteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="casual"
            android:text="@string/icedcaramelmacchiatoText"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="900dp" />

        <TextView
            android:id="@+id/latteInfo"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:fontFamily="casual"
            android:text="@string/caramelmacchiatoInfo"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="272dp" />

        <TextView
            android:id="@+id/latteContent"
            android:layout_width="350dp"
            android:layout_height="143dp"
            android:layout_above="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/colorBrown"
            android:fontFamily="casual"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="@string/macchiatoDescription"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/background_light"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="524dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:onClick="locationAct"
            android:text="@string/locationButton" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
